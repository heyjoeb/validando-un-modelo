<nav class="navbar navbar-inverse navbar-static-top game">
  <div class="container">
    <h1>Validando un modelo</h1>
  </div>
</nav>

<div class="col-md-4 col-md-offset-4 game">
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= form_for @player do |f| %>
    <% if @player.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@player.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% @player.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :username %><br>
      <%= f.text_field :username, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :points %><br>
      <%= f.number_field :points, :class => 'form-control' %>
    </div>

    <div class="field form-group">
      <%= f.label :active %><br>
      <%= f.check_box :active %>
    </div>
</div>

  <div class="col-md-12 game">
    <div class="actions form-group">
      <%= f.submit :class => 'btn btn-success' %>
    </div>
  </div>
<% end %>